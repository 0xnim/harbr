.link {
	color: var(--color-link);
	display: flex;
	align-items: center;
	gap: 0.5rem;
	line-height: 100%;

	&:hover {
		text-decoration: underline;
	}
}

.link-group {
	display: grid;
	grid-template-columns: repeat(3, auto);
	gap: 1rem;

	.link {
		color: var(--color-text);

		&:hover {
			color: var(--color-link);
		}
	}
}
