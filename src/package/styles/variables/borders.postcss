:root {
	/* Borders */
	--border-width: 1px;

	/* Rounded radii */
	--rounded-sm: 10px;
	--rounded: 16px;
	--rounded-lg: 18px;
	--rounded-max: 100px;

	--rounded-top: var(--rounded) var(--rounded) 0 0;
	--rounded-bottom: 0 0 var(--rounded) var(--rounded);
	--rounded-sm-top: var(--rounded-sm) var(--rounded-sm) 0 0;
	--rounded-sm-bottom: 0 0 var(--rounded-sm) var(--rounded-sm);
}
