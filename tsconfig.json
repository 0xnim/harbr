{
	"compilerOptions": {
		"paths": {
			"omorphia/utils": ["src/utils"],
			"omorphia/*": ["src/*"],
			"omorphia": ["src"],
			"$generated/*": ["generated/*"],
			"$lib": ["src"],
			"$lib/*": ["src/*"]
		},
		"resolveJsonModule": true,
		"esModuleInterop": true
	},
	"include": [
		"./docs/**/*.js",
		"./docs/**/*.ts",
		"./docs/**/*.svelte",
		"./src/**/*.js",
		"./src/**/*.ts",
		"./src/**/*.svelte"
	],
	"exclude": ["./node_modules/**", "./.svelte-kit/**"],
	"extends": "./.svelte-kit/tsconfig.json"
}
